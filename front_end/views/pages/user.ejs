<!DOCTYPE html>
<html lang="en" data-theme="light">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Detail</title>
    <link rel="stylesheet" href="/style/output.css">

</head>

<body>

    <!-- Navbar -->
    <%- include('../components/navbar_user_logged'); %>

        <!-- First Drawer Part -->
        <%- include('../layouts/before_page_content'); %>

            <!-- Page content here -->
            <div class="w-full h-full p-4">

                <h1 class="text-5xl font-semibold"><span id="user"></span>'s Dashboard</h1>

                <div class="flex flex-col justify-between items-center gap-4">

                    <div class="flex w-full items-center gap-6">
                        <div class="card h-full w-full bg-base-100 shadow-xl p-3">
                            <div class="card-body items-center md:items-start">
                                <h2 class="card-title font-bold">Library</h2>
                                <button class="btn btn-ghost"
                                    onclick="window.location.href=`/users/library`">Access Library</button>
                            </div>
                        </div>

                        <div class="card h-full w-full bg-base-100 shadow-xl p-3">
                            <div class="card-body items-center md:items-start">
                                <input class="card-title w-full" placeholder="Title">
                                <button class="btn btn-ghost">Write new Article</button>
                            </div>
                        </div>
                    </div>

                    <div class="card h-full w-full bg-base-100 shadow-xl p-3">
                        <div class="card-body items-center md:items-start gap-4">
                            <h2 class="card-title font-bold">Profile</h2>
                            <div class="flex w-full justify-between items-center">
                                <div>
                                    <p class="font-semibold">First Name:</p><span id="firstName"></span>
                                </div>
                                <div>
                                    <p class="font-semibold">Last Name:</p><span id="lastName"></span>
                                </div>
                                <div class="hidden md:block">
                                    <p class="font-semibold">Email:</p><span id="email"></span>
                                </div>
                                <button id="deleteUserButton" class="btn btn-error">Delete Account</button>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
            
            <!-- Footer component -->
            <%- include('../components/footer_user_logged'); %>
                <!-- Footer component end -->

                <!-- Last Drawer Part -->
                <%- include('../layouts/after_page_content'); %>



                    <script src="/scripts/user.js"></script>
                    <script src="/scripts/delete_user_button.js"></script>

                    
</body>

</html>